#  https://www.linkedin.com/in/harisekhon
#

[ -n "${DEBUG:-}" ] && set -x

srcdir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ ! -f "$srcdir/check_kafka_broker.jar" ]; then
    echo "UNKNOWN: check_kafka_broker.jar is missing, did you forget to build the project?"
    exit 3
fi

exec java -Djava.security.auth.login.config=/opt/kafka/config/jaas.conf -jar "$srcdir/check_kafka_broker.jar" $@
